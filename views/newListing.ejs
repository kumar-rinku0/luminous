<%- layout("partials/boilerplate", {title, user}); %>

  <div class="form-container">
    <form action="/listings/new" method="post" class="form">
      <label for="title">Title</label>
      <input type="text" id="title" name="listing[title]" placeholder="Title">
      <label for="description">Description</label>
      <input type="text" id="description" name="listing[description]" placeholder="Description">
      <label for="price">Price</label>
      <input type="number" id="price" name="listing[price]" placeholder="Price">
      <label for="location">Location</label>
      <input type="text" id="location" name="listing[location]" placeholder="Location">
      <label for="country">Country</label>
      <input type="text" id="country" name="listing[country]" placeholder="Country">
      <label for="image">Image Url</label>
      <input type="url" name="listing[image]" id="image" placeholder="PUT Your Image URL here!">
      <div id="check-box">
        <input type="checkbox" name="check" id="check">
        <label for="check" id="check-label">Are you providing correct info?</label>
      </div>
      <button type="submit" class="btn">Add Listing!</button>
    </form>
  </div>